root = true

[*]
indent_style = space
indent_size = 4
continuation_indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
max_line_length = 100

[*.{kt,kts}]
disabled_rules = filename
ktlint_disabled_rules = no-consecutive-blank-lines
ij_kotlin_allow_trailing_comma = true
